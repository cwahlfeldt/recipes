extends base.pug

block scripts
    script(src='js/combobox.js')

block content
    .search
        .flex.flex-col
            .flex.flex-col.items-center.relative
                .w-full
                    .my-2.bg-white.p-1.flex.border.border-gray-200.rounded
                        .flex.flex-auto.flex-wrap
                        input(data-search-input='').p-1.px-2.appearance-none.outline-none.w-full.text-gray-800
                        div
                            button(data-search-clear='').cursor-pointer.w-6.h-full.flex.items-center.text-gray-400.outline-none(class='focus:outline-none')
                                svg.feather.feather-x.w-4.h-4(xmlns='http://www.w3.org/2000/svg' width='100%' height='100%' fill='none' viewbox='0 0 24 24' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
                                    line(x1='18' y1='6' x2='6' y2='18')
                                    line(x1='6' y1='6' x2='18' y2='18')
                        .text-gray-300.w-8.py-1.pl-2.pr-1.border-l.flex.items-center.border-gray-200
                            button(data-search-dropdown-toggle='false').cursor-pointer.w-6.h-6.text-gray-600.outline-none(class='focus:outline-none')
                                svg.feather.feather-chevron-up.w-4.h-4(xmlns='http://www.w3.org/2000/svg' width='100%' height='100%' fill='none' viewbox='0 0 24 24' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
                                    polyline(points='18 15 12 9 6 15')

                div(data-search-dropdown='').absolute.shadow.top-full.z-40.w-full.left-0.rounded.overflow-y-auto
                    .flex.flex-col.w-full
                        each recipe in collections.recipes
                            .recipe(data-search-option=recipe.data.title)
                                a(href=recipe.url).cursor-pointer.w-full.border-gray-100.rounded-t.border-b(class='hover:bg-teal-100')
                                    .flex.w-full.items-center.p-2.pl-2.bg-white.relative(class='hover:bg-teal-600 hover:text-teal-100')
                                        .w-full.items-center.flex
                                            .mx-2.leading-6= recipe.data.title
                      
